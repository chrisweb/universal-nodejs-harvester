{
  "compilerOptions": {
    //"allowSyntheticDefaultImports": true,
    //"esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    //"module": "CommonJS",
    //"module": "ES6",
    //"module": "ESNext",
    "module": "ES2015",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "dist",
    "inlineSourceMap": true,
    "declarationDir": "dist",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es6",
      "es7",
      "esnext",
      "dom"
    ],
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "examples",
    "scripts",
    "dist"
  ]
}