{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "lib": ["es5"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es6",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules"
  ]
}